blueprint:
  name: "Ajf_defi"
  description: "Automatisation avancée pour les défis Hilo avec gestion individuelle des thermostats et des équipements."
  domain: automation
  input:
    default_challenge_entity:
      name: "Entité de Défi de Hilo par défaut"
      selector:
        entity:
          domain:
          - sensor
          multiple: false
    do_pre_heat:
      name: "Activer le pré-chauffage"
      default: true
      selector:
        boolean: {}
    challenge_am:
      name: "Défi AM"
      default: true
      selector:
        boolean: {}
    challenge_pm:
      name: "Défi PM"
      default: true
      selector:
        boolean: {}

    # Sélection des thermostats avec température associée individuellement
    thermostat_1:
      name: "Thermostat 1"
      selector:
        entity:
          domain:
          - climate
          multiple: false
      default: ""
    temp_thermostat_1:
      name: "Température normale - Thermostat 1"
      default: 21
      selector:
        number:
          min: 15
          max: 25
          step: 0.5
          unit_of_measurement: "°C"
    thermostat_2:
      name: "Thermostat 2"
      selector:
        entity:
          domain:
          - climate
          multiple: false
      default: ""
    temp_thermostat_2:
      name: "Température normale - Thermostat 2"
      default: 21
      selector:
        number:
          min: 15
          max: 25
          step: 0.5
          unit_of_measurement: "°C"
    thermostat_3:
      name: "Thermostat 3"
      selector:
        entity:
          domain:
          - climate
          multiple: false
      default: ""
    temp_thermostat_3:
      name: "Température normale - Thermostat 3"
      default: 21
      selector:
        number:
          min: 15
          max: 25
          step: 0.5
          unit_of_measurement: "°C"
    thermostat_4:
      name: "Thermostat 4"
      selector:
        entity:
          domain:
          - climate
          multiple: false
      default: ""
    temp_thermostat_4:
      name: "Température normale - Thermostat 4"
      default: 21
      selector:
        number:
          min: 15
          max: 25
          step: 0.5
          unit_of_measurement: "°C"
    reference_temp:
      name: "Température de référence (+1°C)"
      default: 1
      selector:
        number:
          min: -5
          max: 5
          step: 0.5
          unit_of_measurement: "°C"
    cooling_temp:
      name: "Température de refroidissement (-2°C)"
      default: -2
      selector:
        number:
          min: -5
          max: 5
          step: 0.5
          unit_of_measurement: "°C"
    appreciation_reference_temp:
      name: "Température de la référence d'appréciation (-2°C)"
      default: -2
      selector:
        number:
          min: -5
          max: 5
          step: 0.5
          unit_of_measurement: "°C"
    appreciation_temp:
      name: "Température d'appréciation (+2°C)"
      default: 2
      selector:
        number:
          min: -5
          max: 5
          step: 0.5
          unit_of_measurement: "°C"
    preheat_temp:
      name: "Température de préchauffage (+5°C)"
      default: 5
      selector:
        number:
          min: -5
          max: 5
          step: 0.5
          unit_of_measurement: "°C"
    challenge_temp:
      name: "Température de défi (-4°C)"
      default: -4
      selector:
        number:
          min: -5
          max: 5
          step: 0.5
          unit_of_measurement: "°C"
    water_heater:
      name: "Chauffe-eau"
      selector:
        entity:
          domain:
          - switch
          multiple: false
      default: "switch.chauffe_eau"
    bool_ref_water_heater:
      name: "Contrôle du chauffe-eau"
      default: false
      selector:
        boolean: {}
    other_devices:
      name: "Autres équipements"
      selector:
        entity:
          domain:
          - switch
          multiple: true
      default: []
    send_command:
      name: "Commande à envoyer (ex: contrôle thermopompe)"
      selector:
        text:
      default: ""
triggers:
  - platform: state
    entity_id: sensor.defi_hilo
action:
  - choose:
      - conditions:
          - condition: state
            entity_id: sensor.defi_hilo
            state: pre_heat
        sequence:
          - service: climate.set_temperature
            data:
              entity_id: "{{ thermostat_1 }}"
              temperature: "{{ temp_thermostat_1 + preheat_temp }}"
          - service: climate.set_temperature
            data:
              entity_id: "{{ thermostat_2 }}"
              temperature: "{{ temp_thermostat_2 + preheat_temp }}"
          - service: climate.set_temperature
            data:
              entity_id: "{{ thermostat_3 }}"
              temperature: "{{ temp_thermostat_3 + preheat_temp }}"
          - service: climate.set_temperature
            data:
              entity_id: "{{ thermostat_4 }}"
              temperature: "{{ temp_thermostat_4 + preheat_temp }}"
